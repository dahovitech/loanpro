{% extends 'base.html.twig' %}

{% block title %}{{ 'password_reset.request.title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h3>{{ 'password_reset.request.title'|trans }}</h3>
                        <p class="text-muted">{{ 'password_reset.request.description'|trans }}</p>
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.submit) }}
                        </div>
                    {{ form_end(form) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>
                            {{ 'password_reset.back_to_login'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus on email field
            const emailField = document.getElementById('password_reset_request_email');
            if (emailField) {
                emailField.focus();
            }
        });
    </script>
{% endblock %}