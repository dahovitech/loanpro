{% extends 'client/base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">
                <i class="fas fa-envelope text-primary me-2"></i>
                Messagerie
            </h1>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newMessageModal">
                <i class="fas fa-plus me-1"></i>Nouveau Message
            </button>
        </div>
    </div>
</div>

{% if conversations|length > 0 %}
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-comments me-2"></i>Mes Conversations
                    </h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% for conversation in conversations %}
                            <a href="{{ path('client_messages_conversation', {userId: conversation.user.id}) }}" 
                               class="list-group-item list-group-item-action {{ conversation.unread_count > 0 ? 'bg-light' : '' }}">
                                <div class="d-flex w-100 justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar me-3">
                                            {% if conversation.user.roles and 'ROLE_ADMIN' in conversation.user.roles %}
                                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user-tie"></i>
                                                </div>
                                            {% else %}
                                                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user"></i>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <h6 class="mb-1 fw-bold">
                                                {{ conversation.user.fullName }}
                                                {% if conversation.user.roles and 'ROLE_ADMIN' in conversation.user.roles %}
                                                    <span class="badge bg-primary ms-1">Conseiller</span>
                                                {% endif %}
                                            </h6>
                                            {% if conversation.last_message %}
                                                <p class="mb-0 text-muted">
                                                    <strong>{{ conversation.last_message.subject }}</strong><br>
                                                    <small>{{ conversation.last_message.content|slice(0, 60) }}{% if conversation.last_message.content|length > 60 %}...{% endif %}</small>
                                                </p>
                                            {% else %}
                                                <p class="mb-0 text-muted">Aucun message</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        {% if conversation.unread_count > 0 %}
                                            <span class="badge bg-danger rounded-pill">{{ conversation.unread_count }}</span>
                                        {% endif %}
                                        {% if conversation.last_message %}
                                            <small class="text-muted d-block">
                                                {{ conversation.last_message.sentAt|date('d/m/Y H:i') }}
                                            </small>
                                        {% endif %}
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <!-- Empty State -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body text-center py-5">
                    <i class="fas fa-envelope fa-5x text-muted mb-4"></i>
                    <h3 class="text-muted mb-3">Aucune conversation</h3>
                    <p class="lead text-muted mb-4">
                        Vous n'avez pas encore de conversations. Contactez un conseiller pour commencer !
                    </p>
                    <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#newMessageModal">
                        <i class="fas fa-plus me-2"></i>Contacter un Conseiller
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endif %}

<!-- New Message Modal -->
<div class="modal fade" id="newMessageModal" tabindex="-1" aria-labelledby="newMessageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newMessageModalLabel">
                    <i class="fas fa-envelope me-2"></i>Nouveau Message
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="newMessageForm" method="post">
                    <div class="mb-3">
                        <label for="recipient" class="form-label">Destinataire</label>
                        <select class="form-select" id="recipient" name="recipient" required>
                            <option value="">Sélectionner un conseiller</option>
                            {% for admin in admins %}
                                <option value="{{ admin.id }}">
                                    {{ admin.fullName }} - Conseiller
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Sujet</label>
                        <input type="text" class="form-control" id="subject" name="subject" required
                               placeholder="Sujet de votre message">
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Message</label>
                        <textarea class="form-control" id="content" name="content" rows="5" required
                                  placeholder="Votre message..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" id="sendMessage">
                    <i class="fas fa-paper-plane me-1"></i>Envoyer
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Help Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-question-circle text-info me-2"></i>Besoin d'aide ?
                </h5>
                <div class="row">
                    <div class="col-md-4">
                        <h6><i class="fas fa-clock me-1"></i>Horaires de disponibilité</h6>
                        <ul class="list-unstyled">
                            <li>Lundi - Vendredi : 9h00 - 18h00</li>
                            <li>Samedi : 9h00 - 12h00</li>
                            <li>Dimanche : Fermé</li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6><i class="fas fa-phone me-1"></i>Contact d'urgence</h6>
                        <ul class="list-unstyled">
                            <li>Téléphone : 01 23 45 67 89</li>
                            <li>Email : support@monpret.fr</li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6><i class="fas fa-info-circle me-1"></i>FAQ</h6>
                        <p class="text-muted">
                            Consultez notre <a href="#" class="text-decoration-none">foire aux questions</a> 
                            pour des réponses rapides aux questions courantes.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Send new message
            document.getElementById('sendMessage').addEventListener('click', function() {
                const form = document.getElementById('newMessageForm');
                const recipientId = document.getElementById('recipient').value;
                const subject = document.getElementById('subject').value;
                const content = document.getElementById('content').value;

                if (!recipientId || !subject || !content) {
                    showNotification('Erreur', 'Veuillez remplir tous les champs', 'danger');
                    return;
                }

                const button = this;
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Envoi...';
                button.disabled = true;

                // Create form data
                const formData = new FormData();
                formData.append('subject', subject);
                formData.append('content', content);

                fetch(`{{ path('client_messages_send', {userId: '__USER_ID__'}) }}`.replace('__USER_ID__', recipientId), {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        showNotification('Succès', 'Message envoyé avec succès', 'success');
                        
                        // Reset form
                        form.reset();
                        
                        // Close modal
                        const modal = bootstrap.Modal.getInstance(document.getElementById('newMessageModal'));
                        modal.hide();
                        
                        // Redirect to conversation
                        setTimeout(() => {
                            window.location.href = `{{ path('client_messages_conversation', {userId: '__USER_ID__'}) }}`.replace('__USER_ID__', recipientId);
                        }, 1000);
                    } else {
                        throw new Error('Erreur lors de l\'envoi');
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    showNotification('Erreur', 'Impossible d\'envoyer le message', 'danger');
                })
                .finally(() => {
                    button.innerHTML = originalText;
                    button.disabled = false;
                });
            });

            // Auto-refresh conversations every 30 seconds
            setInterval(() => {
                fetch('{{ path('api_messages_new') }}')
                    .then(response => response.json())
                    .then(data => {
                        if (data.messages.length > 0) {
                            // Show notification for new messages
                            data.messages.forEach(message => {
                                showNotification('Nouveau message', `De ${message.sender}: ${message.subject}`, 'info');
                            });
                            
                            // Refresh page to show new messages
                            setTimeout(() => {
                                window.location.reload();
                            }, 2000);
                        }
                    })
                    .catch(error => console.error('Erreur lors de la vérification des nouveaux messages:', error));
            }, 30000);

            // Mark messages as read when conversation is opened
            document.querySelectorAll('.list-group-item-action').forEach(link => {
                link.addEventListener('click', function(e) {
                    const unreadBadge = this.querySelector('.badge-danger');
                    if (unreadBadge) {
                        unreadBadge.style.display = 'none';
                    }
                });
            });
        });
    </script>
{% endblock %}