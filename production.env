# Configuration de production pour LoanPro
# Ce fichier contient les paramètres spécifiques à l'environnement de production

# Environnement
APP_ENV=prod
APP_DEBUG=false

# Sécurité
APP_SECRET=prod-loanpro-secret-key-$(openssl rand -hex 16)

# Base de données (à adapter selon la configuration serveur)
DATABASE_URL=mysql://root:password@localhost:3306/loanpro_prod?serverVersion=8.0

# Mailer (à configurer selon le serveur SMTP)
MAILER_DSN=smtp://localhost

# Redis (si disponible)
REDIS_URL=redis://localhost:6379

# Logs
LOG_LEVEL=warning

# Performance
OPCACHE_ENABLE=1
CACHE_DRIVER=filesystem

# Upload
MAX_UPLOAD_SIZE=10M

# Session
SESSION_LIFETIME=3600

# Maintenance
MAINTENANCE_MODE=false
